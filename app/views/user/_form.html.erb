<% @categories.each do |c| %>
  <%= c.name %> :----:
  <% c.genres.each do |g| %>
  <% genre_checked = false %>
    <% params[:genre_ids].each do |gid| %>
      <% if gid == g.id.to_s %>
        <% genre_checked = true %>
        <% break %>
      <% end %>
    <% end %>
    <%= check_box_tag("genre_ids[]", g.id, genre_checked) %><%= g.name %>
  <% end %>
  <br/>
<% end %>
<%= submit_tag "送信する", class: "btn btn-primary btn-lg btn-block" %>
<% end %>
